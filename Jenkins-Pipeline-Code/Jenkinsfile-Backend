pipeline {
    agent any

    tools {
        nodejs 'NodeJS_20'
    }

    options {
        skipStagesAfterUnstable()
    }
    
    environment {
        REPO_URL = 'https://github.com/Maharshi08/3-Tier-k8s.git'
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE = 'maharshi86/3-tier-backend'
        DOCKER_TAG = "${BUILD_NUMBER}"
        BACKEND_DIR = 'Application-Code/backend'
    }
    
    stages {

        stage('Clone Repository') {
            steps {
                script {
                    echo 'Cloning repository...'
                    git branch: 'main', url: "${REPO_URL}"
                }
            }
        }

        stage('Debug Node Environment') {
            steps {
                script {
                    sh '''
                      echo "=== Debug Info ==="
                      echo "PATH=$PATH"
                      echo "=== Checking node ==="
                      which node || echo "node not found in PATH"
                      which npm || echo "npm not found in PATH"
                      node --version || echo "node command failed"
                      npm --version || echo "npm command failed"
                      echo "=== Checking /var/jenkins_home/tools ==="
                      ls -la /var/jenkins_home/tools/ || echo "tools dir not found"
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing backend dependencies...'
                    dir("${BACKEND_DIR}") {
                        sh '''
                            node --version
                            npm --version
                            npm install --omit=dev
                            npm audit fix --audit-level=moderate || true
                        '''
                    }
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    echo 'Building backend application...'
                    dir("${BACKEND_DIR}") {
                        sh 'echo "Build completed"'
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    dir("${BACKEND_DIR}") {
                        sh '''
                        if npm run | grep -q "test"; then
                            npm test || echo "Tests failed or not defined, skipping..."
                        else
                            echo "No test script found, skipping tests."
                        fi
                        '''
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    dir("${BACKEND_DIR}") {
                        sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -t ${DOCKER_IMAGE}:latest ."
                    }
                }
            }
        }
        
        stage('Push to Registry') {
            steps {
                script {
                    echo 'Pushing image to Docker registry...'
                    withCredentials([usernamePassword(
                        credentialsId: 'docker-credentials',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                        sh "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                        sh "docker push ${DOCKER_IMAGE}:latest"
                        sh 'docker logout'
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
            cleanWs()
        }
        success {
            echo 'Backend pipeline executed successfully!'
        }
        failure {
            echo 'Backend pipeline execution failed!'
        }
    }
}
