pipeline {
    agent any
    
    // Add tools block to use Jenkins-managed NodeJS and JDK
    tools {
        nodejs 'nodejs'   // <-- must match the NodeJS name in Global Tool Config
        jdk 'jdk'         // <-- must match the JDK name in Global Tool Config
    }
    
    environment {
        REPO_URL = 'https://github.com/Maharshi08/3-Tier-k8s.git'
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE = 'maharshi08/3-tier-frontend'
        DOCKER_TAG = "${BUILD_NUMBER}"
        FRONTEND_DIR = 'Application-Code/frontend'
    }
    
    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: "${REPO_URL}"
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'Installing frontend dependencies...'
                dir("${FRONTEND_DIR}") {
                    sh 'node -v'   // check Node version
                    sh 'npm -v'    // check npm version
                    sh 'npm install'
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building frontend application...'
                dir("${FRONTEND_DIR}") {
                    sh 'NODE_OPTIONS="--openssl-legacy-provider" npm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                dir("${FRONTEND_DIR}") {
                    sh 'npm test -- --passWithNoTests || true'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                dir("${FRONTEND_DIR}") {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -t ${DOCKER_IMAGE}:latest ."
                }
            }
        }
        
        stage('Push to Registry') {
            steps {
                echo 'Pushing image to Docker registry...'
                withCredentials([usernamePassword(credentialsId: 'docker-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    sh "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    sh "docker push ${DOCKER_IMAGE}:latest"
                    sh 'docker logout'
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                echo 'Deploying to Kubernetes cluster...'
                sh '''
                    kubectl set image deployment/frontend frontend=${DOCKER_IMAGE}:${DOCKER_TAG} -n default --record || true
                '''
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
            cleanWs()
        }
        success {
            echo 'Frontend pipeline executed successfully!'
        }
        failure {
            echo 'Frontend pipeline execution failed!'
        }
    }
}
