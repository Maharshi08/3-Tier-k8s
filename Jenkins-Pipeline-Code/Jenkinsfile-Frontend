pipeline {
    agent any

    tools {
        nodejs 'NodeJS_20'
    }

    environment {
        REPO_URL     = 'https://github.com/Maharshi08/3-Tier-k8s.git'
        FRONTEND_DIR = 'Application-Code/frontend'
        DOCKER_IMAGE = 'maharshi86/3-tier-frontend'
        DOCKER_TAG   = "${BUILD_NUMBER}"
    }

    stages {

        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Verify Frontend Structure') {
            steps {
                sh '''
                  echo "Workspace:"
                  pwd
                  ls -la
                  echo "Frontend directory:"
                  ls -la Application-Code/frontend
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing frontend dependencies...'
                dir("${FRONTEND_DIR}") {
                    sh '''
                      node --version
                      npm --version
                      npm install
                    '''
                }
            }
        }

        stage('Build Frontend') {
            steps {
                echo 'Building frontend application...'
                dir("${FRONTEND_DIR}") {
                    sh 'NODE_OPTIONS=--openssl-legacy-provider npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running frontend tests...'
                dir("${FRONTEND_DIR}") {
                    sh 'npm test -- --passWithNoTests || true'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                dir("${FRONTEND_DIR}") {
                    sh '''
                      docker build \
                        -t ${DOCKER_IMAGE}:${DOCKER_TAG} \
                        -t ${DOCKER_IMAGE}:latest .
                    '''
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                echo 'Pushing Docker image...'
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-credentials',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                      docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                      docker push ${DOCKER_IMAGE}:latest
                      docker logout
                    '''
                }
            }
        }

    }

    post {
        always {
            echo 'Pipeline execution completed'
            cleanWs()
        }
        success {
            echo 'Frontend pipeline executed successfully üéâ'
        }
        failure {
            echo 'Frontend pipeline execution failed ‚ùå'
        }
    }
}
