pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/Maharshi08/3-Tier-k8s.git'
        FRONTEND_DIR = 'Application-Code/frontend'
        DOCKER_IMAGE = 'maharshi08/3-tier-frontend'
        DOCKER_TAG = "${BUILD_NUMBER}"
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Install Dependencies') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh '''
                      docker run --rm \
                      -v $PWD:/app \
                      -w /app \
                      node:20-alpine npm install
                    '''
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh '''
                      docker run --rm \
                      -v $PWD:/app \
                      -w /app \
                      -e NODE_OPTIONS=--openssl-legacy-provider \
                      node:20-alpine npm run build
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -t ${DOCKER_IMAGE}:latest ."
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                      echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                      docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                      docker push ${DOCKER_IMAGE}:latest
                      docker logout
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                  kubectl set image deployment/frontend \
                  frontend=${DOCKER_IMAGE}:${DOCKER_TAG} \
                  -n default
                '''
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo '✅ Frontend pipeline executed successfully!'
        }
        failure {
            echo '❌ Frontend pipeline execution failed!'
        }
    }
}
