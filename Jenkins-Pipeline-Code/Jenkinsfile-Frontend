pipeline {
    agent any

    tools {
        nodejs 'NodeJS_20'
    }

    environment {
        REPO_URL     = 'https://github.com/Maharshi08/3-Tier-k8s.git'
        FRONTEND_DIR = 'Application-Code/frontend'
        IMAGE_NAME   = '3-tier-frontend'
        DOCKER_TAG   = "${BUILD_NUMBER}"
    }

    stages {

        stage('Clone Repository') {
            steps {
                echo 'Cloning GitHub repository...'
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Verify Frontend Structure') {
            steps {
                sh '''
                  echo "Workspace:"
                  pwd
                  ls -la
                  echo "Frontend directory:"
                  ls -la ${FRONTEND_DIR}
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh '''
                      echo "Node version:"
                      node --version
                      echo "NPM version:"
                      npm --version
                      npm install
                    '''
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh '''
                      echo "Building frontend..."
                      NODE_OPTIONS=--openssl-legacy-provider npm run build
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh '''
                      echo "Running tests..."
                      npm test -- --passWithNoTests || true
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-credentials',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    dir("${FRONTEND_DIR}") {
                        sh '''
                          echo "Building Docker image..."
                          docker build \
                            -t $DOCKER_USER/${IMAGE_NAME}:${DOCKER_TAG} \
                            -t $DOCKER_USER/${IMAGE_NAME}:latest .
                        '''
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-credentials',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    sh '''
                      echo "Logging into Docker Hub..."
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin

                      echo "Pushing Docker images..."
                      docker push $DOCKER_USER/${IMAGE_NAME}:${DOCKER_TAG}
                      docker push $DOCKER_USER/${IMAGE_NAME}:latest

                      docker logout
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
        success {
            echo 'üéâ Frontend pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Frontend pipeline failed. Check logs above.'
        }
    }
}
